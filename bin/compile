#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e
set -x


# config
APACHE_VERSION="2.2.22"
APACHE_PATH="apache"
PHP_VERSION="5.3.10"
PHP_PATH="php"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

id -un

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APACHE_URL="https://s3.amazonaws.com/php-lp/apache-$APACHE_VERSION.tar.gz"
echo "-----> Bundling Apache version $APACHE_VERSION"
curl --silent --max-time 60 --location "$APACHE_URL" | tar xz

cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR/*

exit

#S3_BUCKET=heroku-buildpack-wordpress
#PHP_URL="https://s3.amazonaws.com/php-lp/php-$PHP_VERSION.tar.gz"
PHP_URL="http://projects.interlated.com.au/php.tgz"
#PHP_URL="https://s3.amazonaws.com/${S3_BUCKET}/php-${PHP_VERSION}-with-fpm-heroku.tar.gz"
echo "-----> Bundling PHP version $PHP_VERSION"
curl --silent --max-time 60 --location "$PHP_URL" | tar xz

PHPSO=apache/modules/libphp5.so
if [ -f $PHPSO ]; then
  echo "Removing $PHPSO"
  rm "$PHPSO"
fi
PHPSO_URL="http://projects.interlated.com.au/libphp5.so"
echo "-----> Copying $PHPSO_URL"
curl --silent --max-time 60 --location "$PHPSO_URL" -o $PHPSO
ls -l $PHPSO
id

EXTDIR=$PHP_PATH/ext
[ -d $EXTDIR ] || mkdir -p $EXTDIR
ln -s /lib/libcrypto.so.0.9.8 $EXTDIR/libcrypto.so.6
ln -s /lib/libssl.so.0.9.8 $EXTDIR/libssl.so.6

# update config files
cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
cp $LP_DIR/conf/php.ini php

# make php available on bin
mkdir -p bin
ln -s /app/php/bin/php bin/php

